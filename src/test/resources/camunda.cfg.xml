<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration" class="org.camunda.bpm.engine.impl.cfg.StandaloneProcessEngineConfiguration">
    
    <!--property name="jdbcUrl" value="jdbc:postgresql://localhost:5432/bpmn?currentSchema=camunda" /-->
    <property name="jdbcUrl" value="jdbc:postgresql://localhost:5432/bpmn" />
    <property name="jdbcUsername" value="bpmn" />
    <property name="jdbcPassword" value="bpmn" />
    <property name="history" value="full" />
    
  </bean>

</beans>
